<div class="container-fluid">
    <main class="content">
        {{!-- NAVBAR --}}
        <header>
            {{!-- LOGO --}}
            <div class="logo topright">
                <div class="square">
                    Food
                </div>
            </div>
            {{!-- ./LOGO --}}
        </header>
        {{!-- ./NAVBAR --}}
        {{!-- ICON --}}
        <div class="appIcon">
            <img  class="animated infinite tada delay-2s" src="/img/burger-vector-png-3.png" alt="burger" id="appIcon">
        </div>
        {{!-- ./ICON --}}
        {{!-- CONTENT TITLE --}}
        <div class="title">Eat Da Burger!</div>
        {{!-- HAVEN'T EATEN BURGERS --}}
        <div class="row">
            {{!-- COLUMN 1 --}}
            <div class="column">
                {{!-- HAVENT EATEN CONTAINER --}}
                <div class="havent-eaten-container">
                    {{!-- COL 1 TITLE --}}
                    <div class="burgers-title">Available Burgers</div>
                    {{!-- PASS IN DATA FROM SERVER.JS --}}
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    {{!-- IF NOT DEVOURED --}}
                    {{!-- ALL BURGERS THAT HAVE NOT BEEN EATEN PLACE THEM HERE --}}
                    <div class="havent-burgers">
                        <form action="/burgers/{{this.id}}?_method=PUT" method="POST" class="update-button">
                            <div type="button" class="btn btn-warning burgers_not_devoured">
                                <input type="hidden" type="text" name="name" data-id="{{this.id}}" value={{this.id}}>
                                {{!-- BURGER IMAGE --}}
                                <div class="burgers-icon">
                                    <img src="/img/burger-vector-png-3.png" alt="burger" id="burgersIcon">
                                </div>
                                {{!-- BURGER NAME --}}
                                <p><span class="label"></span>{{this.name}}</p>
                            </div>
                            <br />
                            {{!-- DEVOUR BURGER BUTTON --}}
                            <button type="submit" data-id="{{this.id}}" class="change-devoured">Devour It!</button>
                        </form>
                    </div>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
            {{!-- COLUMN 2 --}}
            <div class="column">
                {{!-- EATEN BURGERS CONTAINER--}}
                <div class="eaten-burgers-container">
                    {{!-- EATEN BURGERS TITLE --}}
                    <div class="eaten-burgers-title">Eaten Burgers</div>
                    {{#each burgers}}
                    {{#if this.devoured}}
                    {{!-- ALL BURGERS THAT HAVE BEEN EATEN PLACE HERE --}}
                    <div class="eaten-burgers">
                        <div type="button" class="btn btn-success burgers_devoured">
                            <input class="devoured-burgers" type="hidden" name="name" data-id="{{this.name}}"><p ><span class="eaten-text"></span>{{this.name}}</p>
                        </div>
                        <br />
                        <button data-id="{{this.id}}" class="delete-burger">Delete</button>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            {{!-- ./COLUMN 2 --}}
            </div>
        {{!-- ./ROW --}}
        </div>
        {{!-- FORM TO ADD A BURGER  --}}
        <form id="add-burger" action="/burgers" class="create-form" method="POST">
            <div class="form-group">
                {{!-- BURGER INPUT TITLE --}}
                <label for="name">Burger Name</label>
                <br />
                {{!-- INPUT FEILD --}}
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter burger name here....">
            </div>
            <br />
            {{!-- SUBMIT BUTTON --}}
            <button type="submit" class="btn submitBtn" id="button-submit">
            Submit
            </button>
        </form>
    </main>
</div>